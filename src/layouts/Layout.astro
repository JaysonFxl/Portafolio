---
import '../styles/global.css';

export interface Props {
	title: string;
}

const { title } = Astro.props;
const baseUrl = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL.slice(0, -1) : import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Portafolio personal con proyectos, habilidades y datos de contacto" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="astro-base-url" content={baseUrl} />
		
		<!-- Favicon -->
		<link rel="icon" type="image/png" href={`${baseUrl}/maletin-icono.png`} />
		<link rel="apple-touch-icon" href={`${baseUrl}/maletin-icono.png`} />
		<meta name="theme-color" content="#1e40af" />
		
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--font-primary: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
	}
	
	html {
		font-family: var(--font-primary);
		scroll-behavior: smooth;
	}
	
	body {
		margin: 0;
		width: 100%;
		min-height: 100vh;
		overflow-x: hidden;
	}

	.container {
		width: 100%;
		max-width: 1200px;
		margin-inline: auto;
	}
</style>

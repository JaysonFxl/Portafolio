---
interface Props {
  name?: string;
  year?: number;
}

const { 
  name = "Jayson Flores",
  year = new Date().getFullYear()
} = Astro.props;
---

<footer class="relative py-12 overflow-hidden">
  <!-- Fondo con degradado sutil -->
  <div class="absolute inset-0 bg-black z-0">
    <!-- Líneas de cuadrícula futurista -->
    <div class="absolute inset-0 opacity-10 bg-[linear-gradient(rgba(56,189,248,0.1)_1px,transparent_1px),linear-gradient(to_right,rgba(56,189,248,0.1)_1px,transparent_1px)] bg-[size:32px_32px]"></div>
  </div>
  
  <div class="container mx-auto px-6 relative z-10">
    <!-- Línea de división superior con gradiente -->
    <div class="h-px w-full bg-gradient-to-r from-transparent via-blue-500/30 to-transparent mb-12"></div>
    
    <div class="flex flex-col md:flex-row justify-between items-center">
      <div class="mb-8 md:mb-0">
        <a href="/" class="flex items-center gap-2">
          <span class="text-2xl">⬡</span>
          <span class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-600">
            Mi Portafolio
          </span>
        </a>
        
        <p class="text-blue-300/70 mt-3 max-w-md">
          Desarrollando soluciones digitales con pasión y creatividad. Transformando ideas en experiencias memorables.
        </p>
      </div>
      
      <div class="flex flex-col md:flex-row md:items-center space-y-6 md:space-y-0 md:space-x-12">
        <div>
          <h4 class="text-white font-medium mb-3">Navegación</h4>
          <ul class="grid grid-cols-2 gap-x-4 gap-y-2">
            <li><a href="#inicio" class="text-blue-300/70 hover:text-blue-400 transition-colors inline-flex items-center">
              <span class="w-1 h-1 bg-blue-500 rounded-full mr-2"></span>Inicio
            </a></li>
            <li><a href="#sobre-mi" class="text-blue-300/70 hover:text-blue-400 transition-colors inline-flex items-center">
              <span class="w-1 h-1 bg-blue-500 rounded-full mr-2"></span>Sobre Mí
            </a></li>
            <li><a href="#proyectos" class="text-blue-300/70 hover:text-blue-400 transition-colors inline-flex items-center">
              <span class="w-1 h-1 bg-blue-500 rounded-full mr-2"></span>Proyectos
            </a></li>
            <li><a href="#habilidades" class="text-blue-300/70 hover:text-blue-400 transition-colors inline-flex items-center">
              <span class="w-1 h-1 bg-blue-500 rounded-full mr-2"></span>Habilidades
            </a></li>
            <li><a href="#contacto" class="text-blue-300/70 hover:text-blue-400 transition-colors inline-flex items-center">
              <span class="w-1 h-1 bg-blue-500 rounded-full mr-2"></span>Contacto
            </a></li>
          </ul>
        </div>
      </div>
    </div>
    
    <!-- Línea de división inferior con gradiente -->
    <div class="h-px w-full bg-gradient-to-r from-transparent via-blue-500/30 to-transparent my-8"></div>
    
    <div class="text-center md:flex md:justify-between md:items-center text-blue-300/50 text-sm">
      <p>&copy; {year} <span class="text-blue-300/70">{name}</span>. Todos los derechos reservados.</p>
      
      <div class="mt-4 md:mt-0 flex justify-center md:justify-start space-x-4">
        <a href="#" class="hover:text-blue-400 transition-colors">Política de Privacidad</a>
        <span>•</span>
        <a href="#" class="hover:text-blue-400 transition-colors">Términos de Servicio</a>
      </div>
    </div>
    
    <!-- Decoración final -->
    <div class="flex justify-center mt-8">
      <div class="h-1 w-24 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full"></div>
    </div>
  </div>
</footer> 